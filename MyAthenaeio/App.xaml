<Application
    x:Class="MyAthenaeio.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:MyAthenaeio.Converters"
    xmlns:local="clr-namespace:MyAthenaeio"
    StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <converters:BookCoverConverter x:Key="BookCoverConverter" />
        <converters:BoolToAvailabilityConverter x:Key="BoolToAvailabilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Application.Resources>
</Application>