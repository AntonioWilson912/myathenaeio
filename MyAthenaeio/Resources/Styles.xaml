<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MyAthenaeio.Controls"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!--  ScrollBar Dimensions  -->
    <system:Double x:Key="ScrollBarWidth">16</system:Double>
    <system:Double x:Key="ScrollBarArrowHeight">4</system:Double>
    <system:Double x:Key="ScrollBarArrowWidth">8</system:Double>

    <!--  Custom Colors  -->
    <Color x:Key="DarkAcademiaOverlayColor">#CC000000</Color>
    <Color x:Key="DarkAcademiaTextMutedColor">#B0B0B0</Color>

    <!--  Dark Academia Color Palette  -->
    <SolidColorBrush x:Key="DarkAcademiaBackground" Color="#1A1A1A" />
    <SolidColorBrush x:Key="DarkAcademiaPanel" Color="#2D2D2D" />
    <SolidColorBrush x:Key="DarkAcademiaPanelMuted" Color="#3F3F3F" />
    <SolidColorBrush x:Key="DarkAcademiaBorder" Color="#4A4A4A" />
    <SolidColorBrush x:Key="DarkAcademiaAccent" Color="#8B7355" />
    <SolidColorBrush x:Key="DarkAcademiaGold" Color="#D4A574" />
    <SolidColorBrush x:Key="DarkAcademiaText" Color="#E8E8E8" />
    <SolidColorBrush x:Key="DarkAcademiaTextMuted" Color="{StaticResource DarkAcademiaTextMutedColor}" />
    <SolidColorBrush x:Key="DarkAcademiaHighlight" Color="#A67C52" />
    <SolidColorBrush x:Key="DarkAcademiaGreen" Color="#6B8E4E" />
    <SolidColorBrush x:Key="DarkAcademiaGreenMuted" Color="#5A7741" />
    <SolidColorBrush x:Key="DarkAcademiaRed" Color="#A64D4D" />
    <SolidColorBrush x:Key="DarkAcademiaLightRed" Color="#FF6B6B" />
    <SolidColorBrush x:Key="DarkAcademiaAmber" Color="#B8860B" />
    <SolidColorBrush x:Key="DarkAcademiaOverlay" Color="{StaticResource DarkAcademiaOverlayColor}" />

    <!--  Base Window Style  -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaBackground}" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="FontFamily" Value="Georgia, Garamond, Palatino Linotype, Segoe UI" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!--  Border Style  -->
    <Style x:Key="DarkAcademiaBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaAccent}" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="Margin" Value="15" />
    </Style>

    <!--  Base Button Style  -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaAccent}" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaGold}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="15,8" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource DarkAcademiaHighlight}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#8B6F47" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Scan Log Button Styles  -->
    <Style x:Key="ScanLogButtonBase" TargetType="Button">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="ScanLogAddButtonStyle"
        BasedOn="{StaticResource ScanLogButtonBase}"
        TargetType="Button">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaGreen}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource DarkAcademiaGreenMuted}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style
        x:Key="ScanLogInLibraryButtonStyle"
        BasedOn="{StaticResource ScanLogButtonBase}"
        TargetType="Button">
        <Setter Property="Background" Value="#4A6B3A" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#3D5830" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style
        x:Key="ScanLogRetryButtonStyle"
        BasedOn="{StaticResource ScanLogButtonBase}"
        TargetType="Button">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaAmber}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#997008" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style
        x:Key="ScanLogManualButtonStyle"
        BasedOn="{StaticResource ScanLogButtonBase}"
        TargetType="Button">
        <Setter Property="Background" Value="#A67C52" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#8B6F47" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--  TextBox Style  -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaPanel}" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="5,3" />
        <Setter Property="CaretBrush" Value="{StaticResource DarkAcademiaGold}" />
        <Setter Property="SelectionBrush" Value="{StaticResource DarkAcademiaAccent}" />
        <Setter Property="SelectionTextBrush" Value="White" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaAccent}" />
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaHighlight}" />
                <Setter Property="Background" Value="#232323" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="#666666" />
                <Setter Property="Background" Value="#1A1A1A" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="controls:NumberBox">
        <!--  Inherits everything from TextBox style  -->
    </Style>

    <!--  TextBlock Style (for display text)  -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{StaticResource DarkAcademiaTextMuted}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--  TextBlock Style (headings)  -->
    <Style
        x:Key="HeaderTextBlockStyle"
        BasedOn="{StaticResource {x:Type TextBlock}}"
        TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!--  DatePicker Style  -->
    <Style TargetType="DatePicker">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaPanel}" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="4" />
    </Style>

    <!--  DatePickerTextBox Style  -->
    <Style TargetType="DatePickerTextBox">
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="Background" Value="{StaticResource DarkAcademiaPanel}" />
        <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaBorder}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst" />
        <Setter Property="Stylus.IsFlicksEnabled" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                    <Grid>
                        <Border
                            x:Name="Border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            CornerRadius="0"
                            Opacity="1">
                            <Grid
                                x:Name="WatermarkContent"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                <Border
                                    x:Name="ContentElement"
                                    BorderBrush="Transparent"
                                    BorderThickness="0" />
                                <Border
                                    x:Name="watermark_decorator"
                                    BorderBrush="Transparent"
                                    BorderThickness="0">
                                    <ContentControl
                                        x:Name="PART_Watermark"
                                        Focusable="False"
                                        IsHitTestVisible="False"
                                        Opacity="0">
                                        <ContentControl.Template>
                                            <ControlTemplate>
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    Foreground="{StaticResource DarkAcademiaTextMuted}"
                                                    Text="Select a date..." />
                                            </ControlTemplate>
                                        </ContentControl.Template>
                                    </ContentControl>
                                </Border>
                                <ScrollViewer
                                    x:Name="PART_ContentHost"
                                    Margin="0"
                                    HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                                <Border
                                    x:Name="FocusVisual"
                                    BorderBrush="{StaticResource DarkAcademiaGold}"
                                    CornerRadius="0"
                                    IsHitTestVisible="False"
                                    Opacity="0" />
                            </Grid>
                        </Border>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0" />
                                    <VisualTransition GeneratedDuration="0:0:0.1" To="MouseOver" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="ContentElement"
                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                            To="Transparent"
                                            Duration="0" />
                                        <ColorAnimation
                                            Storyboard.TargetName="watermark_decorator"
                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                            To="Transparent"
                                            Duration="0" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="WatermarkStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Unwatermarked" />
                                <VisualState x:Name="Watermarked">
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="ContentElement"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0"
                                            Duration="0" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="PART_Watermark"
                                            Storyboard.TargetProperty="Opacity"
                                            To="1"
                                            Duration="0" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Unfocused" />
                                <VisualState x:Name="Focused">
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="FocusVisual"
                                            Storyboard.TargetProperty="Opacity"
                                            To="1"
                                            Duration="0" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Label Style  -->
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Margin" Value="5,5,5,2" />
    </Style>

    <!--  DataGrid Style  -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaPanel}" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="RowBackground" Value="{StaticResource DarkAcademiaPanel}" />
        <Setter Property="AlternatingRowBackground" Value="#252525" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource DarkAcademiaBorder}" />
        <Setter Property="AutoGenerateColumns" Value="False" />
        <Setter Property="CanUserAddRows" Value="False" />
        <Setter Property="SelectionMode" Value="Single" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="ColumnHeaderStyle">
            <Setter.Value>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{StaticResource DarkAcademiaAccent}" />
                    <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
                    <Setter Property="Padding" Value="10,8" />
                    <Setter Property="FontWeight" Value="SemiBold" />
                    <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaBorder}" />
                    <Setter Property="BorderThickness" Value="0,0,1,1" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="RowStyle">
            <Setter.Value>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{StaticResource DarkAcademiaPanel}" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#353535" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource DarkAcademiaAccent}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ListBox Style  -->
    <Style TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaPanel}" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="5" />
    </Style>

    <!--  ListView Style  -->
    <Style TargetType="ListView">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaPanel}" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaBorder}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!--  CheckBox Style  -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!--  GroupBox Style  -->
    <Style TargetType="GroupBox">
        <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaGold}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!--  ScrollBar Style  -->
    <Style TargetType="{x:Type ScrollBar}">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaPanel}" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaBorder}" />
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Width" Value="{StaticResource ScrollBarWidth}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Button
                                    Grid.Row="0"
                                    Height="{StaticResource ScrollBarWidth}"
                                    Command="ScrollBar.LineUpCommand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Rectangle x:Name="ButtonRectangle" Fill="{StaticResource DarkAcademiaPanelMuted}" />
                                                <Path
                                                    Width="{StaticResource ScrollBarArrowWidth}"
                                                    Height="{StaticResource ScrollBarArrowHeight}"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Data="M 0 10 L 10 10 L 5 0 Z"
                                                    Fill="{StaticResource DarkAcademiaText}"
                                                    Stretch="Fill" />
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ButtonRectangle" Property="Fill" Value="{StaticResource DarkAcademiaAccent}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <Track
                                    Name="PART_Track"
                                    Grid.Row="1"
                                    VerticalAlignment="Stretch"
                                    IsDirectionReversed="True">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Background="{StaticResource DarkAcademiaPanel}" Command="ScrollBar.PageUpCommand">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Rectangle
                                                        Width="{TemplateBinding ActualWidth}"
                                                        Height="{TemplateBinding ActualHeight}"
                                                        Fill="{TemplateBinding Background}" />
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Track.DecreaseRepeatButton>

                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Rectangle x:Name="ThumbRectangle" Fill="{StaticResource DarkAcademiaPanelMuted}" />
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ThumbRectangle" Property="Fill" Value="{StaticResource DarkAcademiaAccent}" />
                                                        </Trigger>
                                                        <Trigger Property="IsDragging" Value="True">
                                                            <Setter TargetName="ThumbRectangle" Property="Fill" Value="{StaticResource DarkAcademiaHighlight}" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>

                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Background="{StaticResource DarkAcademiaPanel}" Command="ScrollBar.PageDownCommand">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Rectangle
                                                        Width="{TemplateBinding ActualWidth}"
                                                        Height="{TemplateBinding ActualHeight}"
                                                        Fill="{TemplateBinding Background}" />
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Track.IncreaseRepeatButton>
                                </Track>

                                <Button
                                    Grid.Row="2"
                                    Height="{StaticResource ScrollBarWidth}"
                                    Command="ScrollBar.LineDownCommand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Rectangle x:Name="ButtonRectangle" Fill="{StaticResource DarkAcademiaPanelMuted}" />
                                                <Path
                                                    Width="{StaticResource ScrollBarArrowWidth}"
                                                    Height="{StaticResource ScrollBarArrowHeight}"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Data="M 0 0 L 10 0 L 5 10 Z"
                                                    Fill="{StaticResource DarkAcademiaText}"
                                                    Stretch="Fill" />
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ButtonRectangle" Property="Fill" Value="{StaticResource DarkAcademiaAccent}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Height" Value="{StaticResource ScrollBarWidth}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Button
                                    Grid.Column="0"
                                    Width="{StaticResource ScrollBarWidth}"
                                    Command="ScrollBar.LineLeftCommand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Rectangle x:Name="ButtonRectangle" Fill="{StaticResource DarkAcademiaPanelMuted}" />
                                                <Path
                                                    Width="{StaticResource ScrollBarArrowHeight}"
                                                    Height="{StaticResource ScrollBarArrowWidth}"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Data="M 0 5 L 10 0 L 10 10 Z"
                                                    Fill="{StaticResource DarkAcademiaText}"
                                                    Stretch="Fill" />
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ButtonRectangle" Property="Fill" Value="{StaticResource DarkAcademiaAccent}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <Track
                                    Name="PART_Track"
                                    Grid.Column="1"
                                    HorizontalAlignment="Stretch"
                                    IsDirectionReversed="False">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Background="{StaticResource DarkAcademiaPanel}" Command="ScrollBar.PageLeftCommand">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Rectangle
                                                        Width="{TemplateBinding ActualWidth}"
                                                        Height="{TemplateBinding ActualHeight}"
                                                        Fill="{TemplateBinding Background}" />
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Track.DecreaseRepeatButton>

                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Rectangle x:Name="ThumbRectangle" Fill="{StaticResource DarkAcademiaPanelMuted}" />
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ThumbRectangle" Property="Fill" Value="{StaticResource DarkAcademiaAccent}" />
                                                        </Trigger>
                                                        <Trigger Property="IsDragging" Value="True">
                                                            <Setter TargetName="ThumbRectangle" Property="Fill" Value="{StaticResource DarkAcademiaHighlight}" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>

                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Background="{StaticResource DarkAcademiaPanel}" Command="ScrollBar.PageRightCommand">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Rectangle
                                                        Width="{TemplateBinding ActualWidth}"
                                                        Height="{TemplateBinding ActualHeight}"
                                                        Fill="{TemplateBinding Background}" />
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Track.IncreaseRepeatButton>
                                </Track>

                                <Button
                                    Grid.Column="2"
                                    Width="{StaticResource ScrollBarWidth}"
                                    Command="ScrollBar.LineRightCommand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Rectangle x:Name="ButtonRectangle" Fill="{StaticResource DarkAcademiaPanelMuted}" />
                                                <Path
                                                    Width="{StaticResource ScrollBarArrowHeight}"
                                                    Height="{StaticResource ScrollBarArrowWidth}"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Data="M 10 5 L 0 0 L 0 10 Z"
                                                    Fill="{StaticResource DarkAcademiaText}"
                                                    Stretch="Fill" />
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ButtonRectangle" Property="Fill" Value="{StaticResource DarkAcademiaAccent}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--  Menu Bar  -->
    <Style TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaBackground}" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
    </Style>

    <!--  MenuItem  -->
    <Style TargetType="MenuItem">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaBackground}" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Border
                        Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="Icon" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="Shortcut" />
                                <ColumnDefinition Width="13" />
                            </Grid.ColumnDefinitions>

                            <!--  Icon/Checkbox area  -->
                            <ContentPresenter
                                Grid.Column="0"
                                Margin="5,0,6,0"
                                VerticalAlignment="Center"
                                ContentSource="Icon" />

                            <!--  Header text  -->
                            <ContentPresenter
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                ContentSource="Header"
                                RecognizesAccessKey="True" />

                            <!--  Submenu arrow  -->
                            <Path
                                Name="ArrowPath"
                                Grid.Column="3"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="M 0 0 L 4 3.5 L 0 7 Z"
                                Fill="{TemplateBinding Foreground}"
                                Visibility="Collapsed" />

                            <!--  Submenu popup  -->
                            <Popup
                                Name="Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{TemplateBinding IsSubmenuOpen}"
                                Placement="Right"
                                PopupAnimation="Fade">
                                <Border
                                    Name="SubmenuBorder"
                                    Background="{StaticResource DarkAcademiaBackground}"
                                    BorderBrush="{StaticResource DarkAcademiaBorder}"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--  Show arrow for items with submenus  -->
                        <Trigger Property="Role" Value="SubmenuHeader">
                            <Setter TargetName="ArrowPath" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <!--  Highlight on hover  -->
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource DarkAcademiaAccent}" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>

                        <!--  Disabled  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#666666" />
                        </Trigger>

                        <!--  Top-level menu items  -->
                        <Trigger Property="Role" Value="TopLevelHeader">
                            <Setter TargetName="Popup" Property="Placement" Value="Bottom" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Separator Style for Menu  -->
    <Style TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaBorder}" />
        <Setter Property="Height" Value="1" />
        <Setter Property="Margin" Value="0,2,0,2" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Rectangle
                        Height="1"
                        Margin="2,0"
                        Fill="{StaticResource DarkAcademiaBorder}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ComboBox Toggle Button Template  -->
    <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="{x:Type ToggleButton}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            <Border
                x:Name="Border"
                Grid.ColumnSpan="2"
                Background="{StaticResource DarkAcademiaPanel}"
                BorderBrush="{StaticResource DarkAcademiaBorder}"
                BorderThickness="1"
                CornerRadius="0" />
            <Border
                Grid.Column="0"
                Margin="1"
                Background="{StaticResource DarkAcademiaPanel}"
                BorderBrush="{StaticResource DarkAcademiaBorder}"
                BorderThickness="0,0,1,0"
                CornerRadius="0" />
            <Path
                x:Name="Arrow"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z"
                Fill="{StaticResource DarkAcademiaText}" />
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter TargetName="Border" Property="Background" Value="{StaticResource DarkAcademiaPanelMuted}" />
            </Trigger>
            <Trigger Property="IsChecked" Value="true">
                <Setter TargetName="Border" Property="Background" Value="{StaticResource DarkAcademiaAccent}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="Border" Property="Background" Value="{StaticResource DarkAcademiaBackground}" />
                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource DarkAcademiaBorder}" />
                <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource DarkAcademiaTextMuted}" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!--  ComboBox TextBox Template  -->
    <ControlTemplate x:Key="ComboBoxTextBox" TargetType="{x:Type TextBox}">
        <Border
            x:Name="PART_ContentHost"
            Background="{TemplateBinding Background}"
            Focusable="False" />
    </ControlTemplate>

    <!--  ComboBox Style  -->
    <Style TargetType="{x:Type ComboBox}">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="true" />
        <Setter Property="MinWidth" Value="120" />
        <Setter Property="MinHeight" Value="20" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="Background" Value="{StaticResource DarkAcademiaPanel}" />
        <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaBorder}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBox}">
                    <Grid>
                        <ToggleButton
                            Name="ToggleButton"
                            Grid.Column="2"
                            ClickMode="Press"
                            Focusable="false"
                            IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                            Template="{StaticResource ComboBoxToggleButton}" />
                        <ContentPresenter
                            Name="ContentSite"
                            Margin="6,3,23,3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="{TemplateBinding SelectionBoxItem}"
                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                            IsHitTestVisible="False" />
                        <TextBox
                            x:Name="PART_EditableTextBox"
                            Margin="3,3,23,3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Background="{StaticResource DarkAcademiaPanel}"
                            Focusable="True"
                            Foreground="{StaticResource DarkAcademiaText}"
                            IsReadOnly="{TemplateBinding IsReadOnly}"
                            Style="{x:Null}"
                            Template="{StaticResource ComboBoxTextBox}"
                            Visibility="Hidden" />
                        <Popup
                            Name="Popup"
                            AllowsTransparency="True"
                            Focusable="False"
                            IsOpen="{TemplateBinding IsDropDownOpen}"
                            Placement="Bottom"
                            PopupAnimation="Slide">
                            <Grid
                                Name="DropDown"
                                MinWidth="{TemplateBinding ActualWidth}"
                                MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                SnapsToDevicePixels="True">
                                <Border
                                    x:Name="DropDownBorder"
                                    Background="{StaticResource DarkAcademiaPanel}"
                                    BorderBrush="{StaticResource DarkAcademiaBorder}"
                                    BorderThickness="1" />
                                <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                </ScrollViewer>
                            </Grid>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="HasItems" Value="false">
                            <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Foreground" Value="{StaticResource DarkAcademiaTextMuted}" />
                        </Trigger>
                        <Trigger Property="IsGrouping" Value="true">
                            <Setter Property="ScrollViewer.CanContentScroll" Value="false" />
                        </Trigger>
                        <Trigger SourceName="Popup" Property="Popup.AllowsTransparency" Value="true">
                            <Setter TargetName="DropDownBorder" Property="CornerRadius" Value="0" />
                            <Setter TargetName="DropDownBorder" Property="Margin" Value="0,2,0,0" />
                        </Trigger>
                        <Trigger Property="IsEditable" Value="true">
                            <Setter Property="IsTabStop" Value="false" />
                            <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible" />
                            <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ComboBoxItem Style  -->
    <Style TargetType="{x:Type ComboBoxItem}">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="Background" Value="{StaticResource DarkAcademiaPanel}" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                    <Border
                        Name="Border"
                        Padding="6,3"
                        Background="{TemplateBinding Background}"
                        SnapsToDevicePixels="true">
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource DarkAcademiaAccent}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Foreground" Value="{StaticResource DarkAcademiaTextMuted}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  TabControl Style  -->
    <Style TargetType="TabControl">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaBorder}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style TargetType="TabItem">
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border
                        Name="Border"
                        Margin="2,0"
                        Padding="15,8"
                        Background="{StaticResource DarkAcademiaPanel}"
                        BorderBrush="{StaticResource DarkAcademiaBorder}"
                        BorderThickness="1,1,1,0"
                        CornerRadius="4,4,0,0">
                        <ContentPresenter
                            x:Name="ContentSite"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            ContentSource="Header"
                            TextElement.Foreground="{TemplateBinding Foreground}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource DarkAcademiaAccent}" />
                            <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#3D3D3D" />
                            <Setter Property="Foreground" Value="{StaticResource DarkAcademiaGold}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource DarkAcademiaTextMuted}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Tag Style Button  -->
    <Style x:Key="TagButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource DarkAcademiaAccent}" />
        <Setter Property="Foreground" Value="{StaticResource DarkAcademiaText}" />
        <Setter Property="BorderBrush" Value="{StaticResource DarkAcademiaGold}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource DarkAcademiaHighlight}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>