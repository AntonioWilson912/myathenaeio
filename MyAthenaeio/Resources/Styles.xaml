<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Rustic Color Palette  -->
    <SolidColorBrush x:Key="RusticBackground" Color="#F5F0E8" />
    <SolidColorBrush x:Key="RusticBorder" Color="#8B7355" />
    <SolidColorBrush x:Key="RusticAccent" Color="#6B5344" />
    <SolidColorBrush x:Key="RusticText" Color="#3E2723" />
    <SolidColorBrush x:Key="RusticHighlight" Color="#A0826D" />
    <SolidColorBrush x:Key="RusticLight" Color="#FFF8E1" />
    <SolidColorBrush x:Key="RusticDark" Color="#4E342E" />

    <!--  Base Window Style  -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource RusticBackground}" />
        <Setter Property="Foreground" Value="{StaticResource RusticText}" />
        <Setter Property="FontFamily" Value="Georgia, Segoe UI" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!--  Button Style  -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource RusticAccent}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="{StaticResource RusticBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Padding" Value="15,8" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource RusticHighlight}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource RusticDark}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  TextBox Style  -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource RusticLight}" />
        <Setter Property="Foreground" Value="{StaticResource RusticText}" />
        <Setter Property="BorderBrush" Value="{StaticResource RusticBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!--  DatePicker Style  -->
    <Style TargetType="DatePicker">
        <Setter Property="Background" Value="{StaticResource RusticLight}" />
        <Setter Property="Foreground" Value="{StaticResource RusticText}" />
        <Setter Property="BorderBrush" Value="{StaticResource RusticBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!--  Label Style  -->
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource RusticText}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="5,5,5,2" />
    </Style>

    <!--  DataGrid Style  -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource RusticLight}" />
        <Setter Property="Foreground" Value="{StaticResource RusticText}" />
        <Setter Property="BorderBrush" Value="{StaticResource RusticBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="RowBackground" Value="{StaticResource RusticLight}" />
        <Setter Property="AlternatingRowBackground" Value="{StaticResource RusticBackground}" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource RusticBorder}" />
        <Setter Property="AutoGenerateColumns" Value="False" />
        <Setter Property="CanUserAddRows" Value="False" />
        <Setter Property="SelectionMode" Value="Single" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!--  ListBox Style  -->
    <Style TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource RusticLight}" />
        <Setter Property="Foreground" Value="{StaticResource RusticText}" />
        <Setter Property="BorderBrush" Value="{StaticResource RusticBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="5" />
    </Style>

    <!--  CheckBox Style  -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource RusticText}" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!--  GroupBox Style  -->
    <Style TargetType="GroupBox">
        <Setter Property="BorderBrush" Value="{StaticResource RusticBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Foreground" Value="{StaticResource RusticText}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <!--  Tag Style Button Style  -->
    <Style x:Key="TagButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#E0E0E0" />
        <Setter Property="BorderBrush" Value="#BDBDBD" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#BDBDBD" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>