<Window x:Class="MyAthenaeio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAthenaeio"
        mc:Ignorable="d"
        Title="myAthenaeio - Book Scanner" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        StateChanged="Window_StateChanged"
        Activated="Window_Activated"
        Deactivated="Window_Deactivated"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2106F3" Padding="15">
            <StackPanel>
                <TextBlock Text="myAthenaeio"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White" />
                <TextBlock Text="Book Scanner &amp; Library Manager"
                           FontSize="12"
                           Foreground="White"
                           Opacity="0.9" />
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Scanner Test">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <!-- Scanner Input Field -->
                    <Border Grid.Row="1"
                            BorderBrush="#2196F3"
                            BorderThickness="2"
                            Padding="10"
                            Margin="0,0,0,20"
                            CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Scan or Type ISBN:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5" />
                            <TextBox x:Name="ScannerInputField"
                                 FontSize="16"
                                 Padding="5"
                                 PreviewKeyDown="ScannerInputField_PreviewKeyDown" />
                        </StackPanel>
                    </Border>
                    
                    <!-- Scan Log -->
                    <GroupBox Grid.Row="2" Header="Scan History">
                        <ScrollViewer>
                            <ItemsControl x:Name="ScanLogList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E0E0E0"
                                                BorderThickness="0,0,0,1"
                                                Padding="10,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="100" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                    Text="{Binding Timestamp, StringFormat='{}{0:HH:MM:ss}'}"
                                                    VerticalAlignment="Center"
                                                    Foreground="Gray" />

                                                <TextBlock Grid.Column="1"
                                                     Text="{Binding Barcode}"
                                                     FontFamily="Consolas"
                                                     FontSize="14"
                                                     FontWeight="SemiBold"
                                                     VerticalAlignment="Center"
                                                     Margin="10,0" />

                                                <TextBlock Grid.Column="2"
                                                     Text="{Binding Source}"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Right"
                                                     Foreground="Gray"
                                                     FontSize="11" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="⚙️ Settings">
                <ScrollViewer>
                    <StackPanel Margin="20" MaxWidth="600">
                        <GroupBox Header="Scanner Settings" Padding="15">
                            <StackPanel>
                                <CheckBox x:Name="BackgroundScanningCheckbox"
                                          Content="Enable background scanning"
                                          IsChecked="False"
                                          Checked="BackgroundScanning_Changed"
                                          Unchecked="BackgroundScanning_Changed"
                                          Margin="0,5"/>
                                <TextBlock Text="Scan books even when app is minimized"
                                           Margin="25,0,0,15" 
                                           Foreground="Gray" 
                                           FontSize="11"
                                           TextWrapping="Wrap"/>

                                <TextBlock Text="Current Mode:" 
                                           FontWeight="SemiBold"
                                           Margin="0,10,0,5"/>
                                <TextBlock x:Name="CurrentModeText"
                                           Text="Focused Field Only"
                                           Foreground="#2196F3"
                                           FontSize="14"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" 
                Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" 
                           Grid.Column="0"
                           Text="Ready to scan"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal">
                    <TextBlock Text="Total scans: " 
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock x:Name="ScanCountText" 
                               Text="0"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
