<Window
    x:Class="MyAthenaeio.Views.BookCopies.BookCopyDetailWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyAthenaeio.Views.BookCopies"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Book Copy Details"
    Width="800"
    Height="600"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml" />
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource RusticBorderStyle}">
            <Grid>
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Book Copy Information" />
                <Button
                    HorizontalAlignment="Right"
                    Click="Edit_Click"
                    Content="Edit Copy" />
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Book Information  -->
                <GroupBox Header="Book">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Cover Image  -->
                        <Border
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Grid.Column="0"
                            Width="100"
                            Height="150"
                            Margin="10"
                            VerticalAlignment="Top"
                            BorderBrush="{StaticResource RusticBorder}"
                            BorderThickness="2"
                            CornerRadius="4">
                            <Image x:Name="BookCoverImage" Stretch="Uniform" />
                        </Border>

                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10"
                            VerticalAlignment="Top">
                            <TextBlock
                                x:Name="BookTitleTextBlock"
                                FontSize="18"
                                FontWeight="Bold"
                                TextWrapping="Wrap" />
                            <TextBlock
                                x:Name="BookAuthorsTextBlock"
                                Margin="0,5,0,0"
                                FontSize="14"
                                Foreground="Gray" />
                            <Button
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left"
                                Click="ViewBook_Click"
                                Content="View Book Details" />
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!--  Copy Information  -->
                <GroupBox Margin="0,10,0,0" Header="Copy Details">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Content="Copy Number:" />
                        <TextBlock
                            x:Name="CopyNumberTextBlock"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="5"
                            VerticalAlignment="Center" />

                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Content="Acquisition Date:" />
                        <TextBlock
                            x:Name="AcquisitionDateTextBlock"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5"
                            VerticalAlignment="Center" />

                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Content="Condition:" />
                        <TextBlock
                            x:Name="ConditionTextBlock"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5"
                            VerticalAlignment="Center" />

                        <Label
                            Grid.Row="3"
                            Grid.Column="0"
                            Content="Status:" />
                        <TextBlock
                            x:Name="StatusTextBlock"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="5"
                            VerticalAlignment="Center"
                            FontWeight="Bold" />

                        <Label
                            Grid.Row="4"
                            Grid.Column="0"
                            Content="Notes:" />
                        <TextBlock
                            x:Name="NotesTextBlock"
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="5"
                            TextWrapping="Wrap" />
                    </Grid>
                </GroupBox>

                <!--  Loan History  -->
                <GroupBox Margin="0,10,0,0" Header="Loan History">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <DataGrid
                            x:Name="LoansDataGrid"
                            Grid.Row="0"
                            Height="200"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            MouseDoubleClick="LoansDataGrid_MouseDoubleClick">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="150"
                                    Binding="{Binding Borrower.Name}"
                                    Header="Borrower" />
                                <DataGridTextColumn
                                    Width="120"
                                    Binding="{Binding CheckoutDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                    Header="Checkout Date" />
                                <DataGridTextColumn
                                    Width="120"
                                    Binding="{Binding EffectiveDueDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                    Header="Due Date" />
                                <DataGridTextColumn
                                    Width="120"
                                    Binding="{Binding ReturnDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                    Header="Return Date" />
                                <DataGridTemplateColumn Width="80" Header="Status">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Returned" />
                                                        <Setter Property="Foreground" Value="Green" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ReturnDate}" Value="{x:Null}">
                                                                <Setter Property="Text" Value="Active" />
                                                                <Setter Property="Foreground" Value="Orange" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Notes}"
                                    Header="Notes" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <TextBlock
                            x:Name="NoLoansText"
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontStyle="Italic"
                            Foreground="Gray"
                            Text="No loan history for this copy"
                            Visibility="Collapsed" />

                        <StackPanel
                            Grid.Row="1"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                x:Name="CheckoutButton"
                                Margin="5,0"
                                Click="Checkout_Click"
                                Content="Check Out" />
                            <Button
                                x:Name="ReturnButton"
                                Margin="5,0"
                                Click="Return_Click"
                                Content="Return"
                                IsEnabled="False" />
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <Button
            Grid.Row="2"
            Width="100"
            Margin="0,15,0,0"
            HorizontalAlignment="Right"
            Click="Close_Click"
            Content="Close" />
    </Grid>
</Window>