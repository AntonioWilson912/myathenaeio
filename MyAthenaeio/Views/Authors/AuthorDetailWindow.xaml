<Window
    x:Class="MyAthenaeio.Views.Authors.AuthorDetailWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyAthenaeio.Views.Authors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Author Details"
    Width="600"
    Height="500"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml" />
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource RusticBorderStyle}">
            <Grid>
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Author Information" />
                <Button
                    HorizontalAlignment="Right"
                    Click="Edit_Click"
                    Content="Edit Author" />
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                    <Border
                        Grid.Column="0"
                        Margin="5"
                        BorderBrush="{StaticResource RusticBorder}"
                        BorderThickness="2"
                        CornerRadius="5">
                        <Image
                            x:Name="PhotoImage"
                            Height="200"
                            Stretch="UniformToFill" />
                    </Border>


                    <StackPanel Grid.Column="1" Margin="10">
                        <TextBlock
                            x:Name="NameTextBlock"
                            FontSize="18"
                            FontWeight="Bold"
                            TextWrapping="Wrap" />
                        <TextBlock
                            x:Name="OLKeyTextBlock"
                            Margin="0,5,0,0"
                            FontSize="12"
                            Foreground="Gray" />
                        <TextBlock
                            x:Name="BirthDateTextBlock"
                            Margin="0,5,0,0"
                            FontSize="12"
                            Foreground="Gray" />
                    </StackPanel>
                </Grid>

                <GroupBox Margin="5" Header="Biography">
                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                        <TextBlock
                            x:Name="BioTextBlock"
                            Padding="5"
                            TextWrapping="Wrap" />
                    </ScrollViewer>
                </GroupBox>

                <GroupBox Margin="5" Header="Books in Library">
                    <ListBox
                        x:Name="BooksListBox"
                        Height="150"
                        MouseDoubleClick="BooksListBox_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold" Text="{Binding Title}" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="Gray"
                                        Text="{Binding PublicationYear, StringFormat='Published: {0}'}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <Button
            Grid.Row="2"
            Width="100"
            Margin="0,15,0,0"
            HorizontalAlignment="Right"
            Click="Close_Click"
            Content="Close" />
    </Grid>
</Window>
