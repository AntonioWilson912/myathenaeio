<Window
    x:Class="MyAthenaeio.Views.Loans.LoanManagementWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyAthenaeio.Views.Loans"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Loan Management"
    Width="900"
    Height="700"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml" />
    </Window.Resources>

    <Grid Background="{StaticResource DarkAcademiaBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource DarkAcademiaBorderStyle}">
            <Grid>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Style="{StaticResource HeaderTextBlockStyle}" Text="Loan Management" />
                        <TextBlock
                            x:Name="BookInfoTextBlock"
                            Margin="0,5,0,0"
                            FontSize="14"
                            Foreground="{StaticResource DarkAcademiaText}" />
                    </StackPanel>
                </StackPanel>
                <Button
                    HorizontalAlignment="Right"
                    Click="ManageBorrowers_Click"
                    Content="Manage Borrowers" />
            </Grid>
        </Border>

        <TabControl Grid.Row="1" Margin="15">
            <!--  Checkout Tab  -->
            <TabItem x:Name="CheckoutTab" Header="Checkout">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Header="New Loan">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Content="Copy:" />
                            <ComboBox
                                x:Name="CopyComboBox"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="5">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="Copy #{0} - {1}">
                                                    <Binding Path="CopyNumber" />
                                                    <Binding Converter="{StaticResource BoolToAvailabilityConverter}" Path="IsAvailable" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                Content="Borrower:" />
                            <ComboBox
                                x:Name="BorrowerComboBox"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5"
                                IsEditable="True"
                                IsTextSearchEnabled="True"
                                SelectionChanged="BorrowerComboBox_SelectionChanged"
                                TextSearch.TextPath="Name">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" />
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="{StaticResource DarkAcademiaRed}"
                                                Text=" (Overdue)"
                                                Visibility="{Binding HasOverdueLoans, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                Content="Email:" />
                            <TextBlock
                                x:Name="BorrowerEmailTextBlock"
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="5"
                                VerticalAlignment="Center" />

                            <Label
                                Grid.Row="3"
                                Grid.Column="0"
                                Content="Loan Date:" />
                            <DatePicker
                                x:Name="LoanDatePicker"
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="5" />

                            <Label
                                Grid.Row="4"
                                Grid.Column="0"
                                Content="Due Date:" />
                            <DatePicker
                                x:Name="DueDatePicker"
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="5" />

                            <Label
                                Grid.Row="5"
                                Grid.Column="0"
                                Content="Notes:" />
                            <TextBox
                                x:Name="LoanNotesTextBox"
                                Grid.Row="5"
                                Grid.Column="1"
                                Height="60"
                                Margin="5"
                                AcceptsReturn="True"
                                TextWrapping="Wrap" />
                        </Grid>
                    </GroupBox>

                    <StackPanel
                        Grid.Row="1"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                        <Button
                            Height="35"
                            Margin="5"
                            Click="Checkout_Click"
                            Content="Complete Checkout" />
                        <Button
                            Height="35"
                            Margin="5"
                            Click="ClearForm_Click"
                            Content="Clear Form" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <!--  Active Loans Tab  -->
            <TabItem Header="Active Loans">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Margin="5"
                        Padding="10"
                        Background="{StaticResource DarkAcademiaGold}"
                        BorderBrush="{StaticResource DarkAcademiaAmber}"
                        BorderThickness="2"
                        CornerRadius="5"
                        Visibility="{Binding HasOverdueLoans, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock
                            x:Name="OverdueWarningTextBlock"
                            FontWeight="Bold"
                            Foreground="{StaticResource DarkAcademiaRed}" />
                    </Border>

                    <DataGrid
                        x:Name="ActiveLoansDataGrid"
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        MouseDoubleClick="ActiveLoansDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="80"
                                Binding="{Binding BookCopy.CopyNumber}"
                                Header="Copy #" />
                            <DataGridTextColumn
                                Width="150"
                                Binding="{Binding Borrower.Name}"
                                Header="Borrower" />
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding CheckoutDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                Header="Loan Date" />
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding EffectiveDueDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                Header="Due Date">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsOverdue}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource DarkAcademiaRed}" />
                                                <Setter Property="FontWeight" Value="Bold" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="80"
                                Binding="{Binding RenewalCount}"
                                Header="Renewals" />
                            <DataGridTemplateColumn Width="80" Header="Overdue">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox
                                            HorizontalAlignment="Center"
                                            IsChecked="{Binding IsOverdue, Mode=OneWay}"
                                            IsEnabled="False">
                                            <CheckBox.Style>
                                                <Style TargetType="CheckBox">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsOverdue}" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource DarkAcademiaRed}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </CheckBox.Style>
                                        </CheckBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*" Header="Actions">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button
                                                Margin="5"
                                                Padding="5,2"
                                                Click="Return_Click"
                                                Content="Return"
                                                Tag="{Binding}" />
                                            <Button
                                                Margin="5"
                                                Padding="5,2"
                                                Click="Renew_Click"
                                                Content="Renew"
                                                Tag="{Binding}" />
                                            <Button
                                                Margin="5"
                                                Padding="5,2"
                                                Click="ViewLoanDetails_Click"
                                                Content="Details"
                                                Tag="{Binding}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!--  Loan History Tab  -->
            <TabItem Header="Loan History">
                <DataGrid x:Name="LoanHistoryDataGrid" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding BookCopy.CopyNumber}"
                            Header="Copy #" />
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding Borrower.Name}"
                            Header="Borrower" />
                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding CheckoutDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                            Header="Loan Date" />
                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding ReturnDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                            Header="Return Date" />
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding RenewalCount}"
                            Header="Renewals" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Notes}"
                            Header="Notes" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <Button
            Grid.Row="2"
            Margin="15"
            HorizontalAlignment="Right"
            Click="Close_Click"
            Content="Close" />
    </Grid>
</Window>
