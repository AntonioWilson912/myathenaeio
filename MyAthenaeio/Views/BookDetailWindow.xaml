<Window
    x:Class="MyAthenaeio.Views.BookDetailWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MyAthenaeio.Views"
    Title="Book Details"
    Width="700"
    Height="600"
    Background="#F9F9F9"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,20,0,10" />
            <Setter Property="Foreground" Value="#333" />
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#666" />
            <Setter Property="Margin" Value="0,8,0,4" />
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Foreground" Value="#333" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="20"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Cover Image  -->
                <Border
                    Grid.Column="0"
                    Width="120"
                    Height="180"
                    Margin="0,0,20,0"
                    Background="#F5F5F5"
                    CornerRadius="4">
                    <Image
                        x:Name="CoverImage"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Stretch="Uniform" />
                </Border>

                <!--  Title and Basic Info  -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        x:Name="TitleText"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="#222"
                        TextWrapping="Wrap" />

                    <TextBlock
                        x:Name="SubtitleText"
                        Margin="0,5,0,0"
                        FontSize="18"
                        FontStyle="Italic"
                        Foreground="#666"
                        TextWrapping="Wrap" />

                    <TextBlock
                        x:Name="AuthorsText"
                        Margin="0,10,0,0"
                        FontSize="16"
                        Foreground="#444"
                        TextWrapping="Wrap" />

                    <TextBlock
                        x:Name="PublishDateText"
                        Margin="0,5,0,0"
                        FontSize="14"
                        Foreground="#888" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Content  -->
        <ScrollViewer
            Grid.Row="1"
            Padding="20"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Description  -->
                <TextBlock Style="{StaticResource SectionHeader}" Text="Description" />
                <Border
                    Padding="15"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="4">
                    <TextBlock
                        x:Name="DescriptionText"
                        Foreground="#333"
                        LineHeight="22"
                        TextWrapping="Wrap" />
                </Border>

                <!--  Authors Details  -->
                <TextBlock Style="{StaticResource SectionHeader}" Text="Authors" />
                <ItemsControl x:Name="AuthorsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,0,10"
                                Padding="15"
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="4">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="15"
                                        FontWeight="SemiBold"
                                        Foreground="#333"
                                        Text="{Binding Name}" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        LineHeight="20"
                                        TextWrapping="Wrap">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding Bio}" />
                                                <Setter Property="Foreground" Value="#333" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Bio}" Value="{x:Null}">
                                                        <Setter Property="Text" Value="No biography available." />
                                                        <Setter Property="FontStyle" Value="Italic" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Bio}" Value="">
                                                        <Setter Property="Text" Value="No biography available." />
                                                        <Setter Property="FontStyle" Value="Italic" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  ISBN and Additional Info  -->
                <TextBlock Style="{StaticResource SectionHeader}" Text="Additional Information" />
                <Border
                    Padding="15"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource LabelText}" Text="ISBN-10" />
                            <TextBlock
                                x:Name="Isbn10Text"
                                FontFamily="Consolas"
                                Style="{StaticResource ValueText}" />

                            <TextBlock Style="{StaticResource LabelText}" Text="ISBN-13" />
                            <TextBlock
                                x:Name="Isbn13Text"
                                FontFamily="Consolas"
                                Style="{StaticResource ValueText}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Style="{StaticResource LabelText}" Text="Open Library Key" />
                            <TextBlock
                                x:Name="KeyText"
                                FontFamily="Consolas"
                                Style="{StaticResource ValueText}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!--  Footer Buttons  -->
        <Border
            Grid.Row="2"
            Padding="20"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="0,1,0,0">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="100"
                    Height="35"
                    Click="CloseButton_Click"
                    Content="Close"
                    IsCancel="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#E0E0E0" />
                            <Setter Property="Foreground" Value="#333" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            Padding="10,8"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D0D0D0" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>