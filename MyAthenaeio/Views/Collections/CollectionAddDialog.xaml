<Window
    x:Class="MyAthenaeio.Views.Collections.CollectionAddDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyAthenaeio.Views.Collections"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add Collection to Book"
    Width="600"
    Height="550"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml" />
    </Window.Resources>

    <Grid Background="{StaticResource DarkAcademiaBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource DarkAcademiaBorderStyle}">
            <TextBlock Style="{StaticResource HeaderTextBlockStyle}" Text="Add Collection to Book" />
        </Border>

        <TabControl Grid.Row="1" Margin="15">
            <TabItem Header="Existing Collection">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <Label Content="Search for existing collection:" />
                        <TextBox
                            x:Name="SearchTextBox"
                            Margin="5,0"
                            TextChanged="SearchTextBox_TextChanged" />
                    </StackPanel>

                    <DataGrid
                        x:Name="ExistingCollectionsDataGrid"
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        MouseDoubleClick="ExistingCollectionsDataGrid_MouseDoubleClick"
                        SelectionChanged="ExistingCollectionsDataGrid_SelectionChanged"
                        SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="200"
                                Binding="{Binding Name}"
                                Header="Name" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Description}"
                                Header="Description">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                        <Setter Property="ToolTip" Value="{Binding Description}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="New Collection">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="Collection Information">
                            <Grid>
                                <Grid.Resources>
                                    <Style BasedOn="{StaticResource {x:Type Label}}" TargetType="Label">
                                        <Setter Property="Margin" Value="0,0,10,10" />
                                    </Style>
                                    <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
                                        <Setter Property="Margin" Value="0,0,0,10" />
                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Content="Name:" />
                                <TextBox
                                    x:Name="NameTextBox"
                                    Grid.Row="0"
                                    Grid.Column="1" />

                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Content="Description:" />
                                <TextBox
                                    x:Name="DescriptionTextBox"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Height="60"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Auto" />

                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Content="Notes:" />
                                <TextBox
                                    x:Name="NotesTextBox"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Height="80"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Auto" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <StackPanel
            Grid.Row="2"
            Margin="15"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="AddButton"
                Click="Add_Click"
                Content="Add"
                IsEnabled="False" />
            <Button Click="Cancel_Click" Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>