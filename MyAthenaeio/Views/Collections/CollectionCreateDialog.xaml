<Window
    x:Class="MyAthenaeio.Views.Collections.CollectionCreateDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyAthenaeio.Views.Collections"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Create New Collection"
    Width="400"
    Height="500"
    WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml" />
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource RusticBorderStyle}">
            <TextBlock
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                Text="Create New Collection" />
        </Border>

        <Grid Grid.Row="1" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="Collection Name:*" />
            <TextBox
                x:Name="NameTextBox"
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Center" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Content="Description:" />
            <TextBox
                x:Name="DescriptionTextBox"
                Grid.Row="1"
                Grid.Column="1"
                Height="80"
                AcceptsReturn="True" />

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Content="Notes:" />
            <TextBox
                x:Name="NotesTextBox"
                Grid.Row="2"
                Grid.Column="1"
                Height="80"
                AcceptsReturn="True" />
        </Grid>

        <StackPanel
            Grid.Row="2"
            Margin="0,15,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Click="Create_Click"
                Content="Create" />
            <Button
                Width="100"
                Click="Cancel_Click"
                Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>