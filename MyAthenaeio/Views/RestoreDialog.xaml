<Window
    x:Class="MyAthenaeio.Views.RestoreDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyAthenaeio.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Restore Library"
    Width="600"
    Height="500"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml" />
    </Window.Resources>
    <Grid Background="{StaticResource DarkAcademiaBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Warning Header  -->
        <Border
            Grid.Row="0"
            Background="{StaticResource DarkAcademiaAmber}"
            Style="{StaticResource DarkAcademiaBorderStyle}">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Text="&#xE7BA;" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Text="Warning: This will replace your entire database with the selected backup!" />
            </StackPanel>
        </Border>

        <!--  Backup List  -->
        <GroupBox
            Grid.Row="2"
            Margin="10"
            Header="Available Backups">
            <Grid>
                <ListView x:Name="BackupsListView" SelectionChanged="BackupsListView_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock FontWeight="SemiBold" Text="{Binding DisplayDate}" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{StaticResource DarkAcademiaTextMuted}"
                                        Text="{Binding RelativeTime}" />
                                </StackPanel>

                                <TextBlock
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Top"
                                    Foreground="{StaticResource DarkAcademiaTextMuted}"
                                    Text="{Binding FileSize}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!--  Empty State  -->
                <StackPanel
                    x:Name="EmptyStatePanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
                    <TextBlock
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="{StaticResource DarkAcademiaTextMuted}"
                        Text="No automatic backups available" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Foreground="{StaticResource DarkAcademiaTextMuted}"
                        Text="Backups are created automatically every 7 days when you start the app"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <!--  Action Buttons  -->
        <StackPanel
            Grid.Row="3"
            Margin="15"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="RestoreButton"
                Click="RestoreButton_Click"
                Content="Restore"
                IsEnabled="False" />
            <Button
                x:Name="CancelButton"
                Click="CancelButton_Click"
                Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>
