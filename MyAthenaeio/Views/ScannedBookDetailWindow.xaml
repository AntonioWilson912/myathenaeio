<Window
    x:Class="MyAthenaeio.Views.ScannedBookDetailWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MyAthenaeio.Views"
    Title="Scanned Book Details"
    Width="700"
    Height="600"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="20"
            Background="{StaticResource RusticAccent}"
            BorderBrush="{StaticResource RusticBorder}"
            BorderThickness="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Cover Image  -->
                <Border
                    Grid.Column="0"
                    Width="120"
                    Height="180"
                    Margin="0,0,20,0"
                    Background="{StaticResource RusticLight}"
                    BorderBrush="{StaticResource RusticBorder}"
                    BorderThickness="2"
                    CornerRadius="4">
                    <Image
                        x:Name="CoverImage"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Stretch="Uniform" />
                </Border>

                <!--  Title and Basic Info  -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        x:Name="TitleText"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        TextWrapping="Wrap" />

                    <TextBlock
                        x:Name="SubtitleText"
                        Margin="0,5,0,0"
                        FontSize="18"
                        FontStyle="Italic"
                        Foreground="{StaticResource RusticLight}"
                        TextWrapping="Wrap" />

                    <TextBlock
                        x:Name="AuthorsText"
                        Margin="0,10,0,0"
                        FontSize="16"
                        Foreground="White"
                        TextWrapping="Wrap" />

                    <TextBlock
                        x:Name="PublishDateText"
                        Margin="0,5,0,0"
                        FontSize="14"
                        Foreground="{StaticResource RusticLight}" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Content  -->
        <ScrollViewer
            Grid.Row="1"
            Padding="20"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Description  -->
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{StaticResource RusticText}"
                    Text="Description" />
                <Border
                    Margin="0,0,0,15"
                    Padding="15"
                    Background="{StaticResource RusticLight}"
                    BorderBrush="{StaticResource RusticBorder}"
                    BorderThickness="2"
                    CornerRadius="4">
                    <TextBlock
                        x:Name="DescriptionText"
                        Foreground="{StaticResource RusticText}"
                        LineHeight="22"
                        TextWrapping="Wrap" />
                </Border>

                <!--  Authors Details  -->
                <TextBlock
                    Margin="0,10,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{StaticResource RusticText}"
                    Text="Authors" />
                <ItemsControl x:Name="AuthorsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,0,10"
                                Padding="15"
                                Background="{StaticResource RusticLight}"
                                BorderBrush="{StaticResource RusticBorder}"
                                BorderThickness="2"
                                CornerRadius="4">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="15"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource RusticText}"
                                        Text="{Binding Name}" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        Foreground="{StaticResource RusticText}"
                                        LineHeight="20"
                                        TextWrapping="Wrap">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding Bio}" />
                                                <Setter Property="Foreground" Value="{StaticResource RusticText}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Bio}" Value="{x:Null}">
                                                        <Setter Property="Text" Value="No biography available." />
                                                        <Setter Property="FontStyle" Value="Italic" />
                                                        <Setter Property="Foreground" Value="{StaticResource RusticHighlight}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Bio}" Value="">
                                                        <Setter Property="Text" Value="No biography available." />
                                                        <Setter Property="FontStyle" Value="Italic" />
                                                        <Setter Property="Foreground" Value="{StaticResource RusticHighlight}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  ISBN and Additional Info  -->
                <TextBlock
                    Margin="0,10,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{StaticResource RusticText}"
                    Text="Additional Information" />
                <Border
                    Padding="15"
                    Background="{StaticResource RusticLight}"
                    BorderBrush="{StaticResource RusticBorder}"
                    BorderThickness="2"
                    CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource RusticText}"
                                Text="ISBN-10" />
                            <TextBlock
                                x:Name="Isbn10Text"
                                Margin="0,0,0,15"
                                FontFamily="Consolas"
                                Foreground="{StaticResource RusticText}" />

                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource RusticText}"
                                Text="ISBN-13" />
                            <TextBlock
                                x:Name="Isbn13Text"
                                FontFamily="Consolas"
                                Foreground="{StaticResource RusticText}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource RusticText}"
                                Text="Open Library Key" />
                            <TextBlock
                                x:Name="KeyText"
                                FontFamily="Consolas"
                                Foreground="{StaticResource RusticText}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!--  Footer Buttons  -->
        <Border
            Grid.Row="2"
            Padding="20"
            Background="{StaticResource RusticBackground}"
            BorderBrush="{StaticResource RusticBorder}"
            BorderThickness="0,2,0,0">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="100"
                    Height="35"
                    Click="CloseButton_Click"
                    Content="Close"
                    IsCancel="True" />
            </StackPanel>
        </Border>
    </Grid>
</Window>