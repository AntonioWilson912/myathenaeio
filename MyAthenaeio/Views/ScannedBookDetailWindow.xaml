<Window
    x:Class="MyAthenaeio.Views.ScannedBookDetailWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MyAthenaeio.Views"
    Title="Scanned Book Details"
    Width="700"
    Height="600"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml" />
    </Window.Resources>

    <Grid Background="{StaticResource DarkAcademiaBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border Grid.Row="0" Style="{StaticResource DarkAcademiaBorderStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Cover Image  -->
                <Border
                    Grid.Column="0"
                    Width="120"
                    Height="180"
                    Margin="0,0,20,0"
                    Background="{StaticResource DarkAcademiaPanel}"
                    BorderBrush="{StaticResource DarkAcademiaBorder}"
                    BorderThickness="2"
                    CornerRadius="4">
                    <Image
                        x:Name="CoverImage"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Stretch="Uniform" />
                </Border>

                <!--  Title and Basic Info  -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        x:Name="TitleText"
                        FontSize="24"
                        FontWeight="Bold"
                        TextWrapping="Wrap" />

                    <TextBlock
                        x:Name="SubtitleText"
                        Margin="0,5,0,0"
                        FontSize="18"
                        FontStyle="Italic"
                        Foreground="{StaticResource DarkAcademiaPanel}"
                        TextWrapping="Wrap" />

                    <TextBlock
                        x:Name="AuthorsText"
                        Margin="0,10,0,0"
                        FontSize="16"
                        TextWrapping="Wrap" />

                    <TextBlock
                        x:Name="PublishDateText"
                        Margin="0,5,0,0"
                        FontSize="14"
                        Foreground="{StaticResource DarkAcademiaPanel}" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Content  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="15"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Description Section  -->
                <TextBlock
                    x:Name="DescriptionLabel"
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Description" />
                <Border
                    Margin="0,0,0,15"
                    Padding="15"
                    Background="{StaticResource DarkAcademiaPanel}"
                    BorderBrush="{StaticResource DarkAcademiaBorder}"
                    BorderThickness="2"
                    CornerRadius="4">
                    <StackPanel>
                        <TextBlock
                            x:Name="DescriptionText"
                            LineHeight="22"
                            TextWrapping="Wrap" />

                        <!--  Technical error details (for failed scans)  -->
                        <Border
                            x:Name="TechnicalErrorBorder"
                            Margin="0,10,0,0"
                            Padding="10"
                            Background="{StaticResource DarkAcademiaPanel}"
                            BorderBrush="{StaticResource DarkAcademiaBorder}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource DarkAcademiaTextMuted}"
                                    Text="Technical Details:" />
                                <TextBlock
                                    x:Name="TechnicalErrorText"
                                    Margin="0,5,0,0"
                                    FontFamily="Consolas"
                                    FontSize="11"
                                    Foreground="{StaticResource DarkAcademiaTextMuted}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!--  Authors Details  -->
                <StackPanel x:Name="AuthorsSection">
                    <TextBlock
                        x:Name="AuthorsTextBlock"
                        Margin="0,10,0,10"
                        Padding="10"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Authors" />

                    <!--  Authors List  -->
                    <ItemsControl x:Name="AuthorsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,0,0,10"
                                    Padding="15"
                                    Background="{StaticResource DarkAcademiaPanel}"
                                    BorderBrush="{StaticResource DarkAcademiaBorder}"
                                    BorderThickness="2"
                                    CornerRadius="4">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="15"
                                            FontWeight="SemiBold"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            LineHeight="20"
                                            TextWrapping="Wrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding Bio}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Bio}" Value="{x:Null}">
                                                            <Setter Property="Text" Value="No biography available." />
                                                            <Setter Property="FontStyle" Value="Italic" />
                                                            <Setter Property="Foreground" Value="{StaticResource DarkAcademiaTextMuted}" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Bio}" Value="">
                                                            <Setter Property="Text" Value="No biography available." />
                                                            <Setter Property="FontStyle" Value="Italic" />
                                                            <Setter Property="Foreground" Value="{StaticResource DarkAcademiaTextMuted}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--  No Authors Available Message  -->
                    <Border
                        x:Name="NoAuthorsMessage"
                        Padding="15"
                        Background="{StaticResource DarkAcademiaPanel}"
                        BorderBrush="{StaticResource DarkAcademiaBorder}"
                        BorderThickness="2"
                        CornerRadius="4"
                        Visibility="Collapsed">
                        <TextBlock
                            FontStyle="Italic"
                            Foreground="{StaticResource DarkAcademiaTextMuted}"
                            Text="Author information is not available for this book." />
                    </Border>
                </StackPanel>

                <!--  ISBN and Additional Info  -->
                <TextBlock
                    Margin="0,10,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{StaticResource DarkAcademiaText}"
                    Text="Additional Information" />
                <Border
                    Padding="15"
                    Background="{StaticResource DarkAcademiaPanel}"
                    BorderBrush="{StaticResource DarkAcademiaBorder}"
                    BorderThickness="2"
                    CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource DarkAcademiaText}"
                                Text="ISBN-10" />
                            <TextBlock
                                x:Name="Isbn10Text"
                                Margin="0,0,0,15"
                                FontFamily="Consolas"
                                Foreground="{StaticResource DarkAcademiaText}" />

                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource DarkAcademiaText}"
                                Text="ISBN-13" />
                            <TextBlock
                                x:Name="Isbn13Text"
                                FontFamily="Consolas"
                                Foreground="{StaticResource DarkAcademiaText}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource DarkAcademiaText}"
                                Text="Open Library Key" />
                            <TextBlock
                                x:Name="KeyText"
                                FontFamily="Consolas"
                                Foreground="{StaticResource DarkAcademiaText}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!--  Footer Buttons  -->
        <Border
            Grid.Row="2"
            Margin="15"
            Background="{StaticResource DarkAcademiaBackground}"
            BorderBrush="{StaticResource DarkAcademiaBorder}"
            BorderThickness="0,2,0,0">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Click="CloseButton_Click"
                    Content="Close"
                    IsCancel="True" />
            </StackPanel>
        </Border>
    </Grid>
</Window>